{
  "name": "flex-reviews-dashboard",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "vercel-build": "prisma generate --schema prisma/schema.postgres.prisma && prisma db push --schema prisma/schema.postgres.prisma && next build",
    "start": "next start",
    "clean": "node -e \"const fs=require('fs');['.next','.turbo'].forEach(d=>{if(fs.existsSync(d)){fs.rmSync(d,{recursive:true,force:true});console.log('Removed',d)}})\"",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "db:push": "prisma db push",
    "seed": "prisma db push && tsx scripts/seed.ts",
    "postinstall": "prisma generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "framer-motion": "^11.11.17",
    "@headlessui/react": "^1.7.18",
    "@prisma/client": "5.22.0",
    "@tanstack/react-query": "^5.47.0",
    "@tanstack/react-query-devtools": "^5.47.0",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.460.0",
    "next": "^14.2.5",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "recharts": "^2.12.7",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "^3.4.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-testing-library": "^6.2.2",
    "husky": "^9.1.6",
    "playwright": "^1.49.0",
    "prettier": "^3.3.2",
    "prisma": "5.22.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.2",
    "vitest": "^4.0.3"
  }
}
