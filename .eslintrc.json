{
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "plugins": ["testing-library"],
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "testing-library/no-node-access": "off"
  },
  "overrides": [
    {
      "files": ["tests/**/*.ts", "tests/**/*.tsx"],
      "extends": ["plugin:testing-library/react"]
    }
  ]
}

